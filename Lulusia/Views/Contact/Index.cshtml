@model FeedbackClientViewModel
@{
    ViewData["Title"] = "Contact Page";
}
<style>
    .mapouter {
        position: relative;
        text-align: right;
        width: 100%;
        height: 400px;
    }

    .gmap_canvas {
        overflow: hidden;
        background: none !important;
        width: 100%;
        height: 400px;
    }

    .gmap_iframe {
        height: 400px !important;
    }</style>
<div class="contactPage my-4">
    <div>
        <div class="row mb-4">
            <div class="col-6">
                <img src="~/assets/images/louboutin-rouge-louboutin-001m-768x766.png" class="h-auto w-100" />
            </div>
            <div class="col-6 d-flex align-items-center">
                <form asp-action="Index" method="post" onsubmit="return false">
                    <h1 class="text-capitalize">Phản ánh chất lượng dịch vụ</h1>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label text-capitalize">@_language.Getkey("fullName"):</label> <span style="color:red;">(*)</span>
                        <input asp-for="FullName" class="form-control" autocomplete="off" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label text-capitalize">Email:</label> <span style="color:red;">(*)</span>
                        <input asp-for="Email" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject" class="control-label text-capitalize">@_language.Getkey("subject"):</label> <span style="color:red;">(*)</span>
                        <input asp-for="Subject" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Description" class="control-label text-capitalize">@_language.Getkey("content"):</label> <span style="color:red;">(*)</span>
                        <textarea asp-for="Description" class="form-control" rows="4" autocomplete="off"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary text-capitalize">@_language.Getkey("send")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="mapouter">
        <div class="gmap_canvas"><iframe class="gmap_iframe" width="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=1200&amp;height=400&amp;hl=en&amp;q=University of Oxford&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe><a href="https://sprunkin.com/">Sprunki Incredibox</a></div>
    </div>
</div>